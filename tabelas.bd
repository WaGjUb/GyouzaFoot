#mysql --force < nome_deste_arquivo

#como colocar os dados na tabela
#mysql --local <nome do banco> <arquivo com o mesmo nome da tabela> 

use gyouzafoot;

create table jogadores(
       nome varchar(255),
       idade int,
       id int not null auto_increment,
       primary key( id )
);

create table posicao(
       id int not null auto_increment,
       nome varchar(40),
       sigla varchar(4),
       primary key( id )
);

create table contrato(
       id int not null auto_increment,
       id_jogador int,
       entrada date,
       saida date,
       camisa int,
       posicao int,
       primary key ( id ),
       foreign key (id_jogador) references jogadores( id )
);

create table posicao(
	id int not null auto_increment,
	sigla varchar(5),
	nome varchar(30),
	primary key( id )
);

create table jogo(
	id int not null auto_increment,
	nome_adversario varchar(100),
	PTgyouza int,
	PTadversario int,
	data date,
	primary key ( id )
);

create table participacao(
	id int not null auto_increment,
	id_jogador int,
	id_jogo int,
	gol_contra int,
	gol_valido int, 
	primary key ( id ),
	foreign key ( id_jogador ) references jogadores( id ),
	foreign key ( id_jogo ) references jogo( id )
);

create table suspensao(
	id int not null auto_increment,
	id_participacao int,
	qtde_jogos int,
	primary key ( id ),
	foreign key ( id_participacao ) references participacao( id )
);

create table cartao_amarelo(
	id int not null auto_increment,
	id_participacao int,
	primary key ( id ),
	foreign key ( id_participacao ) references participacao( id )
);

create table cartao_vermelho(
	id int not null auto_increment,
	id_participacao int,
	primary key ( id ),
	foreign key ( id_participacao ) references participacao( id )
);

create table faltas_cometidas(
	id int not null auto_increment,
	id_participacao int,
	gravidade int,
	primary key ( id ),
	foreign key ( id_participacao ) references participacao( id )
);

create table faltas_tomadas(
	id int not null auto_increment,
	id_participacao int,
	gravidade int,
	primary key ( id ),
	foreign key ( id_participacao ) references participacao( id )
);
